 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_listview_item_split"
        android:orientation="vertical"  >

     <LinearLayout
         android:layout_width="match_parent"
         android:id="@+id/fragment_entNews_listview_linear_top"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/fragment_entNews_listview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/fragment_entNews_listview_photo"
            android:maxLines="2"
            android:textColor="#313233"
            android:text="1234"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/fragment_entNews_listview_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="womene我们5678"
            android:textColor="#545454"
            android:textSize="14sp"/>
        </LinearLayout>

    <ImageView

        android:id="@+id/fragment_entNews_listview_photo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/action_settings"
        android:layout_gravity="right"
        android:layout_weight="1"/>
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:id="@+id/fragment_entNews_listview_linear_bottom"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginBottom="5dp"
         >

    <LinearLayout
        android:id="@+id/fragment_entNews_listview_linear_left"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/fragment_entNews_listview_linear_top"
        android:layout_marginTop="8dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/fragment_entNews_listview_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:src="@drawable/icon_hot" />

        <View
            android:id="@+id/fragment_entNews_listview_divide1"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fragment_entNews_listview_hot"
            android:background="#7A7C80" />

        <TextView
            android:id="@+id/fragment_entNews_listview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fragment_entNews_listview_divide1"
            android:textColor="#7A7C80"
            android:textSize="12sp" />
        </LinearLayout>

     <LinearLayout
         android:id="@+id/fragment_entNews_listview_linear_right"
         android:layout_width="0dp"
         android:layout_height="fill_parent"
         android:orientation="horizontal"
         android:layout_marginTop="8dp"
         android:layout_marginRight="5dp"
         android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/fragment_entNews_listview_relative_reply"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/fragment_entNews_listview_relative_agree">
            <ImageView
                android:id="@+id/fragment_entNews_listview_reply_Num_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"

                android:src="@drawable/icon_replay_times" />

            <TextView
                android:id="@+id/fragment_entNews_listview_reply_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/fragment_entNews_listview_reply_Num_img"
                android:textColor="#7A7C80"
                android:text="0"
                android:textSize="12sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fragment_entNews_listview_relative_agree"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/fragment_entNews_listview_image_agree_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="#00000000"
                android:src="@drawable/icon_agree" />

            <TextView
                android:id="@+id/fragment_entNews_listview_agree_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fragment_entNews_listview_image_agree_num"
                android:textColor="#7A7C80"
                android:text="0"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>
